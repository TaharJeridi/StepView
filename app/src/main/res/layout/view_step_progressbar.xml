<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/containerStepProgressBar"
    android:layout_height="30dp">

    <ProgressBar
        android:id="@+id/stepProgressBar"
        style="@style/StepProgressBar"
        android:secondaryProgressTint="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@id/llStep"
        app:layout_constraintTop_toTopOf="@id/llStep" />

    <LinearLayout
        android:id="@+id/llStep"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>